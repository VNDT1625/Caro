APP_NAME=MindPointArena
APP_ENV=local
APP_KEY=base64:REPLACE_ME
APP_DEBUG=true
APP_URL=http://localhost:8000

# Supabase Postgres connection (use values from your Supabase project)
DB_CONNECTION=pgsql
DB_HOST=db.your-supabase-host.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=your_db_password

# Redis for queues/presence (optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Supabase client (for verifying tokens in lightweight backend)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=public-anon-key